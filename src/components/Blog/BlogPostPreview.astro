---
import type { CollectionEntry } from "astro:content";

interface Props {
    post: CollectionEntry<"blog">;
}

const { data, id } = Astro.props.post;
---

<a class="card" href={`/blog/${id}`}>
    <header>
        <h2 class="title">{data.title}</h2>
    </header>
    <div>
        <p class="excerpt">{data.description}</p>
        <img
            src={data.img}
            alt={data.img_alt || ""}
            loading="lazy"
            decoding="async"
        />
    </div>
</a>

<style>
    .card {
        display: grid;
        grid-template-rows: auto 1fr; /* separate title and content */
        height: 14rem;
        background: var(--gradient-subtle);
        border: 1px solid var(--gray-800);
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        text-decoration: none;
        font-family: var(--font-brand);
        font-size: var(--text-md);
        font-weight: 400;
        transition: box-shadow var(--theme-transition);
    }

    .card:hover {
        box-shadow: var(--shadow-md);
    }

    /* Add some padding and margin to the title */
    header {
        padding: 1rem;
        margin-bottom: 2rem; /* create some space between title and excerpt */
    }

   .title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
		text-align: :center;
	}
    
    .excerpt {
        margin: 0.5rem 1rem;
        color: var(--gray-400);
        font-size: var(--text-sm);
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    @media (min-width: 50em) {
        .card {
            height: 24rem;
            border-radius: 1.5rem;
        }
    }
</style>
