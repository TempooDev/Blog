---
import CallToAction from "@components/Common/CallToAction.astro";
import Icon from "@components/Common/Icon.astro";

const { pathname } = Astro.url;
const lang = pathname.startsWith("/en") ? "en" : "es";

const text =
  lang === "en"
    ? { title: "Interested in working together?", btn: "Send Me a Message" }
    : {
        title: "¿Te interesa que trabajemos juntos?",
        btn: "Envíame un mensaje",
      };
---

<aside>
  <h2>{text.title}</h2>
  <CallToAction
    href="mailto:antoniobermudezdev@gmail.com"
    data-tempoo-goal="cta_click"
    data-tempoo-goal-position="hero"
    data-tempoo-goal-variant="a"
  >
    {text.btn}
    <Icon icon="paper-plane-tilt" size="1.2em" />
  </CallToAction>
</aside>

<style>
  aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    border-top: 1px solid var(--gray-800);
    border-bottom: 1px solid var(--gray-800);
    padding: 5rem 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
  }

  h2 {
    font-size: var(--text-xl);
    text-align: center;
    max-width: 15ch;
  }

  @media (min-width: 50em) {
    aside {
      padding: 7.5rem;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    h2 {
      font-size: var(--text-3xl);
      text-align: left;
    }
  }
</style>
