---
import Icon from "@components/Common/Icon.astro";
import { skillsI18n } from "../../i18n/components";

interface Props {
  lang?: string;
}

const { lang = "es" } = Astro.props;
const content = skillsI18n[lang as keyof typeof skillsI18n];
---

<section class="box skills">
  <div class="stack gap-2 lg:gap-4">
    <Icon
      icon="terminal-window"
      color="var(--accent-regular)"
      size="2.5rem"
      gradient
    />
    <h2>{content.fullStack.title}</h2>
    <p>{content.fullStack.desc}</p>
  </div>
  <div class="stack gap-2 lg:gap-4">
    <Icon icon="trophy" color="var(--accent-regular)" size="2.5rem" gradient />
    <h2>{content.leader.title}</h2>
    <p>{content.leader.desc}</p>
  </div>
  <div class="stack gap-2 lg:gap-4">
    <Icon
      icon="lightbulb"
      color="var(--accent-regular)"
      size="2.5rem"
      gradient
    />
    <h2>{content.learner.title}</h2>
    <p>{content.learner.desc}</p>
  </div>
</section>

<style>
  .box {
    border: 1px solid var(--gray-800);
    border-radius: 0.75rem;
    padding: 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
  }

  .skills {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .skills h2 {
    font-size: var(--text-lg);
  }

  .skills p {
    color: var(--gray-400);
  }

  @media (min-width: 50em) {
    .box {
      border-radius: 1.5rem;
      padding: 2.5rem;
    }

    .skills {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 5rem;
    }

    .skills h2 {
      font-size: var(--text-2xl);
    }
  }
</style>
