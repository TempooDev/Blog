---
import Pill from "@components/Common/Pill.astro";

interface Props {
    href: string;
    title: string;
    description: string; 
    imgSrc: string;
    imgAlt?: string;
    tags?: string[];
    publishDate?: string; 
    excerpt?: string;     
}

const { 
    href, 
    title, 
    description, 
    imgSrc, 
    imgAlt = "", 
    tags,         
    publishDate,  
    excerpt 
} = Astro.props;
---

<a class="card" href={href}>
    <header>
        <h2 class="title">{title}</h2>
        {tags && tags.length > 0 && (
            <div class="tags-container">
                {tags.slice(0, 3).map(tag => <Pill>{tag}</Pill>)}
            </div>
        )}
    </header>
    {imgSrc != '' && (
        <img
            src={imgSrc}
            alt={imgAlt}
            loading="lazy"
            decoding="async"
        />
    )}
</a>

<style>
    .card {
        display: grid;
        grid-template-rows: auto 1fr; 
        height: auto; 
        min-height: 20rem;
        background: var(--gradient-subtle);
        border: 1px solid var(--gray-800);
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        text-decoration: none;
        font-family: var(--font-brand);
        font-size: var(--text-md);
        font-weight: 400;
        transition: box-shadow var(--theme-transition);
        color: var(--text-color); /* Asegurar que el texto sea legible */
    }

    .card:hover {
        box-shadow: var(--shadow-md);
    }

    header {
        padding: 1rem 1rem 0.5rem; /* Ajustado padding */
    }

   .title {
        margin: 0 0 0.5rem 0;
        padding: 0.5rem 1rem;
        background: var(--gray-999);
        color: var(--gray-100); /* Un poco más claro para el título */
        border-radius: 0.375rem;
        text-align: center;
        font-size: var(--text-lg); /* Ligeramente más grande */
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.25rem;
        margin-bottom: 0.5rem;
    }

    .tag {
        background-color: var(--accent-dark);
        color: var(--text-color-inverted, white);
        padding: 0.15rem 0.5rem;
        border-radius: 0.25rem;
        font-size: var(--text-xs);
        text-transform: uppercase;
    }
    
    .content-body {
        padding: 0 1rem;
    }

    .description {
        color: var(--gray-300);
        font-size: var(--text-sm);
        line-height: 1.6;
        margin-bottom: 0.5rem;
    }

    .excerpt {
        color: var(--gray-400);
        font-size: var(--text-xs);
        margin-bottom: 0.5rem;
    }

    .publish-date {
        color: var(--gray-500);
        font-size: var(--text-xs);
        text-align: right;
        margin-bottom: 0.5rem;
    }

    img {
        width: 100%;
        object-fit: contain; 
        align-self: end; 
    }

    @media (min-width: 50em) {
        .card {
            min-height: 25rem; /* Aumentado para pantallas grandes */
            border-radius: 1.5rem;
            grid-template-rows: auto 1fr; /* Mantener consistencia */
        }
        .title {
			border-radius: 0.9375rem;
            font-size: var(--text-xl);
		}
        img {
            object-fit: contain; /* Mantener consistencia */
        }
    }
</style>
