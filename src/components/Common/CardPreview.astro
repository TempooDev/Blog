---
interface Props {
    href: string;
    title: string;
    description: string; // Asegurar que description esté aquí
    imgSrc: string;
    imgAlt?: string;
    tags?: string[];      // Añadido para las etiquetas
    publishDate?: string; // Añadido para la fecha de publicación
    excerpt?: string;     // El excerpt es opcional
}

const { 
    href, 
    title, 
    description, // Asegurar que se desestructura
    imgSrc, 
    imgAlt = "", 
    tags,         // Asegurar que se desestructura
    publishDate,  // Asegurar que se desestructura
    excerpt 
} = Astro.props;
---

<a class="card" href={href}>
    <header>
        <h2 class="title">{title}</h2>
        {tags && tags.length > 0 && (
            <div class="tags-container">
                {tags.slice(0, 3).map(tag => <span class="tag">{tag}</span>)}
            </div>
        )}
    </header>
    <div class="content-body">
        <p class="description">{description}</p>
        {excerpt && <p class="excerpt">{excerpt}</p>}
        {publishDate && <p class="publish-date">{publishDate}</p>}
    </div>
    <img
        src={imgSrc}
        alt={imgAlt}
        loading="lazy"
        decoding="async"
    />
</a>

<style>
    .card {
        display: grid;
        grid-template-rows: auto auto 1fr; /* title, content-body, img */
        height: auto; 
        min-height: 20rem; /* Aumentado para más contenido */
        background: var(--gradient-subtle);
        border: 1px solid var(--gray-800);
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        text-decoration: none;
        font-family: var(--font-brand);
        font-size: var(--text-md);
        font-weight: 400;
        transition: box-shadow var(--theme-transition);
        color: var(--text-color); /* Asegurar que el texto sea legible */
    }

    .card:hover {
        box-shadow: var(--shadow-md);
    }

    header {
        padding: 1rem 1rem 0.5rem; /* Ajustado padding */
    }

   .title {
        margin: 0 0 0.5rem 0;
        padding: 0.5rem 1rem;
        background: var(--gray-999);
        color: var(--gray-100); /* Un poco más claro para el título */
        border-radius: 0.375rem;
        text-align: center;
        font-size: var(--text-lg); /* Ligeramente más grande */
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.25rem;
        margin-bottom: 0.5rem;
    }

    .tag {
        background-color: var(--accent-dark);
        color: var(--text-color-inverted, white);
        padding: 0.15rem 0.5rem;
        border-radius: 0.25rem;
        font-size: var(--text-xs);
        text-transform: uppercase;
    }
    
    .content-body {
        padding: 0 1rem;
    }

    .description {
        color: var(--gray-300);
        font-size: var(--text-sm);
        line-height: 1.6;
        margin-bottom: 0.5rem;
    }

    .excerpt {
        color: var(--gray-400);
        font-size: var(--text-xs);
        margin-bottom: 0.5rem;
    }

    .publish-date {
        color: var(--gray-500);
        font-size: var(--text-xs);
        text-align: right;
        margin-bottom: 0.5rem;
    }

    img {
        width: 100%;
        height: 12rem; /* Altura fija para la imagen */
        object-fit: cover;
        align-self: end; /* Alinea la imagen al final del grid item */
    }

    @media (min-width: 50em) {
        .card {
            min-height: 25rem; /* Aumentado para pantallas grandes */
            border-radius: 1.5rem;
            grid-template-rows: auto auto 1fr; /* Mantener consistencia */
        }
        .title {
			border-radius: 0.9375rem;
            font-size: var(--text-xl);
		}
        img {
            height: 15rem; /* Imagen un poco más grande en desktop */
        }
    }
</style>
