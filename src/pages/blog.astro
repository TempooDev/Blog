---
import { getCollection } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import ContactCTA from "@components/Common/ContactCTA.astro";
import Hero from "@components/Common/Hero.astro";
import Grid from "@components/Common/Grid.astro";
import BlogPostPreview from "@components/Blog/BlogPostPreview.astro";

const { pathname } = Astro.url;
const currentLang = pathname.startsWith("/en") ? "en" : "es";

const posts = (
  await getCollection("blog", ({ id }) => {
    return id.startsWith(`${currentLang}/`);
  })
).sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

const content =
  currentLang === "en"
    ? {
        title: "My Blog",
        tagline:
          "Here you will find information about systems design and my most recent projects.",
      }
    : {
        title: "Mi Blog",
        tagline:
          "Aquí encontrarás información sobre diseño de sistemas y mis proyectos más recientes.",
      };
---

<BaseLayout
  title={`Antonio Bermúdez - ${content.title}`}
  description={content.tagline}
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero title={content.title} tagline={content.tagline} align="start" />
      <Grid variant="offset">
        {
          posts.map((post) => (
            <li>
              <BlogPostPreview post={post} />
            </li>
          ))
        }
      </Grid>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>
