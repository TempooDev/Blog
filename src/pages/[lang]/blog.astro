---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import ContactCTA from "@components/Common/ContactCTA.astro";
import Hero from "@components/Common/Hero.astro";
import Grid from "@components/Common/Grid.astro";
import BlogPostPreview from "@components/Blog/BlogPostPreview.astro";
import { getLangStaticPaths } from "../../utils/routing";
import { blogI18n } from "../../i18n/pages/collections";

export const getStaticPaths = getLangStaticPaths;

const { lang } = Astro.params;

const posts = (
  await getCollection("blog", ({ id }) => {
    return id.startsWith(`${lang}/`);
  })
).sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

const content = blogI18n[lang as keyof typeof blogI18n];
---

<BaseLayout
  title={`Antonio BermÃºdez - ${content.title}`}
  description={content.tagline}
>
  <div class="stack gap-20">
    <main class="wrapper stack gap-8">
      <Hero title={content.title} tagline={content.tagline} align="start" />
      <Grid variant="offset">
        {
          posts.map((post) => (
            <li>
              <BlogPostPreview post={post} />
            </li>
          ))
        }
      </Grid>
    </main>
    <ContactCTA lang={lang} />
  </div>
</BaseLayout>
